<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_height="match_parent"
        android:layout_width="match_parent">


    <ImageView
            android:layout_width="@dimen/simple150dp"
            android:layout_height="@dimen/simple200dp"
            android:scaleType="centerCrop"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0"
            android:id="@+id/imageMovie"/>

    <TextView
            android:textAlignment="center"
            android:layout_width="@dimen/simple90dp"
            android:layout_height="wrap_content"
            android:id="@+id/reviewValue"
            android:layout_marginTop="@dimen/simple76dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@+id/imageMovie"
            android:layout_marginStart="@dimen/simple20dp"
            android:layout_marginLeft="@dimen/simple20dp"
            android:layout_marginEnd="@dimen/simple25dp"
            android:layout_marginRight="@dimen/simple25dp"/>

    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/borra_esta_critica_text"
            android:textSize="12sp"
            android:textColor="@color/white"
            android:gravity="center"
            android:background="@color/red"
            android:clickable="true"
            android:id="@+id/deleteButton"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="@dimen/simple8dp"
            android:layout_marginRight="@dimen/simple8dp"
            android:layout_marginTop="@dimen/simple76dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="@dimen/simple40dp"
            android:layout_marginLeft="@dimen/simple40dp"
            app:layout_constraintHorizontal_bias="0.506"
            android:focusable="false"/>

</android.support.constraint.ConstraintLayout>