<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout 
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="300dp"
        android:layout_height="wrap_content">

    <ToggleButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/buttonFavorite"
            android:background="@drawable/button_favorite"
            android:checked="false"
            android:text=""
            android:textOff=""
            android:textOn=""
            android:layout_marginStart="44dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="44dp"
            android:layout_marginTop="40dp"
            app:layout_constraintTop_toTopOf="parent"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Favorita"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="44dp"
            android:layout_marginStart="44dp"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@+id/buttonFavorite"
            android:id="@+id/textView3"/>

    <ToggleButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/buttonWatched"
            android:background="@drawable/button_watched"
            android:checked="false"
            android:text=""
            android:textOff=""
            android:textOn=""
            android:layout_marginTop="40dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@+id/buttonFavorite"
            android:layout_marginStart="40dp"
            android:layout_marginLeft="40dp"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Vista"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@+id/buttonWatched"
            app:layout_constraintStart_toEndOf="@+id/textView3"
            android:layout_marginLeft="48dp"
            android:layout_marginStart="48dp"
            android:id="@+id/textView4"/>

    <ToggleButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/buttonWatchList"
            android:background="@drawable/watch_list_button"
            android:checked="false"
            android:text=""
            android:textOff=""
            android:textOn=""
            app:layout_constraintStart_toEndOf="@+id/buttonWatched"
            android:layout_marginStart="48dp"
            android:layout_marginLeft="48dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="40dp"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pendiente"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@+id/buttonWatchList"
            app:layout_constraintStart_toEndOf="@+id/textView4"
            android:layout_marginLeft="48dp"
            android:layout_marginStart="48dp"/>

</android.support.constraint.ConstraintLayout>