<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
        android:id="@+id/castCard"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="@dimen/simple130dp"
        android:layout_height="@dimen/simple190dp"
        android:layout_margin="@dimen/simple10dp"
        app:cardCornerRadius="@dimen/simple8dp"
        app:cardElevation="@dimen/simple10dp">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

        <ImageView
                android:id="@+id/castProfile"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/simple100dp"
                android:scaleType="centerCrop"/>

        <TextView
                android:id="@+id/actorName"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:textAlignment="center"
                android:textSize="15sp"
                android:textStyle="bold"/>

        <TextView
                android:id="@+id/characterName"
                android:textColor="@color/black"
                android:layout_width="@dimen/simple110dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:textSize="12sp"
                android:textAlignment="center"/>


    </LinearLayout>

</android.support.v7.widget.CardView>