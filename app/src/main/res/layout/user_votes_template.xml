<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="@dimen/simple128dp"
        android:layout_marginEnd="@dimen/simple8dp"
        android:layout_marginStart="@dimen/simple8dp"
        android:layout_marginTop="@dimen/simple8dp">

    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


        <ImageView
                android:id="@+id/item_movie_poster"
                android:layout_width="@dimen/simple150dp"
                android:layout_height="@dimen/simple200dp"
                android:scaleType="centerCrop"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

        <TextView
                android:text="@string/tu_votacion_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView5"
                app:layout_constraintEnd_toStartOf="@+id/item_movie_rating"
                android:layout_marginEnd="@dimen/simple8dp"
                android:layout_marginRight="@dimen/simple8dp"
                app:layout_constraintStart_toEndOf="@+id/item_movie_poster"
                android:layout_marginLeft="@dimen/simple8dp"
                android:layout_marginStart="@dimen/simple8dp"
                android:layout_marginTop="@dimen/simple24dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintHorizontal_bias="0.648"/>

        <TextView
                android:id="@+id/item_movie_rating"
                android:layout_width="@dimen/simple50dp"
                android:layout_height="@dimen/simple50dp"
                android:textColor="@color/white"
                android:gravity="center"
                android:layout_marginEnd="@dimen/simple8dp"
                android:background="@drawable/button_back"
                android:textAlignment="center"
                android:layout_marginRight="@dimen/simple8dp"
                android:layout_marginTop="@dimen/simple8dp"
                android:textSize="20sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>

