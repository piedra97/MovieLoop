<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        android:id="@+id/filmLayout"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical">

    <TextView
            android:id="@+id/noMoviesFoundText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/no_hay_pel_culas_en_esta_lista_text"
            android:textAlignment="center"
            android:visibility="gone"
            android:textStyle="bold"
            android:layout_marginTop="@dimen/simple70dp"
            android:layout_marginStart="@dimen/simple30dp"
            android:textSize="20sp"
            android:layout_marginLeft="@dimen/simple50dp"/>

    <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/movies_userListing"
            app:layoutManager="android.support.v7.widget.GridLayoutManager"/>

</LinearLayout>